<!DOCTYPE html>
<html>
<head>
  <title>Agora</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if signed_in? %>
    <h1>Signed in as <%= current_user.username %></h1>
  <% end %>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<%= yield %>

</body>
</html>
